<h1>People are Reading ...</h1>

<table>
  <tr>
    <th>Photo</th>
    <th>Title</th>
    <th>Author</th>
    <th>Isbn</th>
   
  </tr>

<% @books.each do |book| %>
  <tr>
    <td>
        <% if book.photo.present? %>
            <%= link_to (image_tag book.photo, height:80), book %>
        <% elsif book.goodreadsphoto.present? %>
            <%= link_to (image_tag book.goodreadsphoto, height:80), book %>
        <% end %>
    </td>
    <td><%= link_to book.title, book %></td>
    <td><%= book.author %></td>
    <td><%= book.isbn %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_book_path %>
